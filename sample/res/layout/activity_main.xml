<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.baoyz.widget.BubbleImageView
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/pic" >
        </com.baoyz.widget.BubbleImageView>

        <com.baoyz.widget.BubbleImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/pic"
            app:bubble_angle="20dp"
            app:bubble_arrowHeight="50dp"
            app:bubble_arrowLocation="right"
            app:bubble_arrowOffset="10dp"
            app:bubble_arrowTop="50dp"
            app:bubble_arrowWidth="30dp" >
        </com.baoyz.widget.BubbleImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.baoyz.widget.BubbleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/pic"
            app:bubble_angle="20dp"
            app:bubble_arrowHeight="30dp"
            app:bubble_arrowOffset="5dp"
            app:bubble_arrowTop="30dp"
            app:bubble_arrowWidth="20dp" >
        </com.baoyz.widget.BubbleImageView>

        <com.baoyz.widget.BubbleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/pic"
            app:bubble_angle="30dp"
            app:bubble_arrowHeight="35dp"
            app:bubble_arrowLocation="right"
            app:bubble_arrowOffset="-50dp"
            app:bubble_arrowTop="50dp"
            app:bubble_arrowWidth="20dp" >
        </com.baoyz.widget.BubbleImageView>
    </LinearLayout>

</LinearLayout>